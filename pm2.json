{
  "apps" : [{
    "name": "app-crust-api",
    "script": "./main.js",
    "exec_mode": "cluster",
    "instances": 1,
    "max_memory_restart": "1G",
    "autorestart": true,
    "autoput": "/dev/null",
    "merge_logs": true,
    "log_date_format": "YYYY-MM-DD HH:mm Z",
    "source_map_support": false,
    "error_file": "./logs/pm2-err.log",
    "out_file": "./logs/pm2-out.log",
    "env": {
      "NODE_ENV": "production"
    }
  }]
}